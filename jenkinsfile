pipeline{
    agent any
    stages{
        stage("Sonar Quality Check"){
            agent {
                docker{
                    image 'opnejdk:11'
                }
            }
            steps{
                scripts{
                    withSonarQubeEnv(credentialsId: 'sonar-token') {
                        sh 'chmod +x gradlew'
                        sh './gradlew sonarqube'
                    }
                }
             }

        }
     }
}